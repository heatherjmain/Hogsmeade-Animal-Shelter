<h1><%= @animal.name %></h1>





<form class="details-form">

  <div class="details">

    <img class="animal_img" src="../images/<%= @animal.photo %>" alt="">

    <p>Age: <%= @animal.age %></p>
    <p>Species: <%= @animal.species %></p>
    <p>Admission Date: <%= @animal.admission_date %></p>
    <p>Status: <%= @animal.is_adoptable %></p>
    <% if !@animal.adopter_id.nil? %>
      <p>Adopter: <%= @animal.find_adopter.name %></p>
      <p>Adoption Date: <%= @animal.adoption_date %></p>
    <% end %>
  </div>

</form>

<br>


<div class="buttons">


  <% if @animal.is_adoptable == "Successfully Adopted" %>
    <a href="/animals/<%= @animal.id %>/edit">
      <input type="submit" id="Add Adopter" value="Add Adopter" /></a>
  <% end %>

  <br>

  <a href="/animals/<%= @animal.id %>/edit">
    <input type="submit" id="Update-animal-details" value="Update Details" /></a>

  <form class="delete" action="/animals/<%= @animal.id %>/delete" method="POST">
    <input type="submit" id="delete" value="Remove Animal" />
  </form>

  <a href="/animals">
    <input type="submit" id="back_to_all_animals" value="Back To All Animals" /></a>


</div>
