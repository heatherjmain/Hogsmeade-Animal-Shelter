<h1><%= @animal.name %></h1>


<div class="grid-show">
  <div class="grid-row-show">



      <div class="cell-show">

      <div class="details">

        <img class="show_img" src="../images/<%= @animal.photo %>" alt="">

        <p>Age: <div class="purple"><%= @animal.age %></div></p>

        <br>

        <p>Species: <div class="purple"><%= @animal.species %></div></p>

        <br>

        <p>Admission Date: <div class="purple"><%= @animal.admission_date %></div></p>

        <br>

        <p>Status: <div class="purple"><%= @animal.is_adoptable %></div></p>

        <br>

    <% if !@animal.adopter_id.nil? %>
        <p>Adopter: <div class="purple"><%= @animal.find_adopter.name %></div></p>

        <br>

        <p>Adoption Date: <div class="purple"><%= @animal.adoption_date %></div></p>
        <% end %>
      </div>

</div>
</div>
</div>



<br>


<div>


  <% if @animal.is_adoptable == "Successfully Adopted" %>
    <a href="/animals/<%= @animal.id %>/edit">
      <input class="button" type="submit" id="Add Adopter" value="Add Adopter" /></a>
  <% end %>

  <br>

  <a href="/animals/<%= @animal.id %>/edit">
    <input type="submit" id="Update-animal-details" value="Update Details" /></a>

  <form class="delete" action="/animals/<%= @animal.id %>/delete" method="POST">
    <input type="submit" id="delete" value="Remove Animal" />
  </form>

  <a href="/animals">
    <input type="submit" id="back_to_all_animals" value="Back To All Animals" /></a>


</div>
