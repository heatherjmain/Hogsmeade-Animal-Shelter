<h1>Adopter</h1>

<div class="details">
  <p>First name: <%= @adopter.first_name %></p>
  <p>Surname: <%= @adopter.last_name %></p>
  <p>Address: <%= @adopter.address %></p>
  <p>Postcode: <%= @adopter.postcode %></p>
  <p>Tel number: <%= @adopter.tel_num %></p>
  <p>Ready to adopt?: <%= @adopter.ready_to_adopt %></p>
</div>


<div>
  <form action="/adopters/<%= @adopter.id %>/edit" method="GET">
    <input type="submit" id="update_adopter_details" value="Update Details" />
  </form>

  <form action="/adopters/<%= @adopter.id %>/delete" method="POST">
    <input type="submit" id="delete" value="Remove Adopter" />
  </form>

  <form action="/adopters" method="GET">
    <input type="submit" id="back_to_all_adopters" value="Back to all adopters" />

  </form>

</div>
